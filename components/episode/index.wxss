.container {
  height: 60rpx; /* 这个元素是由最高元素确定的。最高元素是 .index 的字体高度 */
  display: inline-flex;
  flex-direction: row;
}

.index-container {
  display: flex;
  flex-direction: row;
  align-items: baseline; /* 保证内部元素文字的底对齐 */
}

.plain {
  font-size: 32rpx;
}

.index {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;
}

.line {
  /* baseline 对 <text>|</text> 不生效，所以采用 css 生成竖线 */
  height: 44rpx;
  margin-right: 14rpx;
  border-left: 1rpx solid black;
}

.date-container {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.month {
  font-size: 24rpx;
  line-height: 24rpx;
}
.year {
  font-size: 20rpx;
}
